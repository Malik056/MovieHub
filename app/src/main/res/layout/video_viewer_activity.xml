<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/video_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:background="@android:color/black">

        <com.universalvideoview.UniversalVideoView
            android:id="@+id/videoView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:uvv_autoRotation="true"
            app:uvv_fitXY="false" />

        <com.universalvideoview.UniversalMediaController
            android:id="@+id/media_controller"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:uvv_scalable="true" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        app:layout_constraintTop_toBottomOf="@id/video_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/comment_area"
        android:layout_width="fill_parent"
        android:layout_height="0dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Dummy User"
            android:layout_weight="0.12"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_weight="0.18"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/upvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/upvote"
                android:gravity="center"
                android:layout_marginStart="25dp"
                android:textColor="@android:color/white"
                android:text="200000"/>

            <TextView
                android:id="@+id/down_vote"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/downvote"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="200000"/>



        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/comment_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_weight="0.15"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:textColorHint="@android:color/darker_gray"
            android:maxHeight="150dp"
            android:maxLines="4"
            android:textColor="@android:color/white"
            android:hint="Enter Comment"
            android:inputType="textMultiLine"
            android:textSize="22sp"
            android:scrollbars="vertical"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_send"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>